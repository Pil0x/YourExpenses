@model             Category

@{
    ViewData["Title"] = "Details";
}

<div>
    <h2>Category - @Html.DisplayFor(model => model.Name)</h2>
    <hr />
    @if (ViewBag.Expenses != null && ViewBag.Expenses.Count > 0)
    {
        <h3>Expenses</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var expense in ViewBag.Expenses)
                    {
                        <td class="col-sm-10">
                            @expense.Name
                        </td>
                        <td class="col-sm-10">
                            @expense.Amount
                        </td>
                        @if (expense.IsSubscription)
                        {
                            <td><i class="bi bi-arrow-repeat"></i></td>
                        }
                    }
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-center">No expenses</h3>
    }

</div>
<div>
    @if (Model?.UserId != null)
    {
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        </div>
    }

    <a asp-action="Index">Back to List</a>
</div>
